  </div>

  <div>
    <%= form.label :single_medium %><br>
    <%= form.number_field :single_medium %>
  </div>

  <div>
    <%= form.label :single_hard %><br>
    <%= form.number_field :single_hard %>
  </div>

  <div>
    <%= form.label :single_expert %><br>
    <%= form.number_field :single_expert %>
  </div>

  <div>
    <%= form.label :single_edit %><br>
